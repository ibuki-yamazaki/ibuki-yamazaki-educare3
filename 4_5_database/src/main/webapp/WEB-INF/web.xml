<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- アプリケーション情報 -->
    <display-name>商品検索システム</display-name>
    <description>PostgreSQLデータベースを使用した商品検索システム</description>
    
   
    
   
    <!-- ウェルカムファイル -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>dbconnection_javaee01_servlet.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- セッションタイムアウト（30分） -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- エラーページ -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
    
    <!-- 文字エンコーディングフィルタ -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- セキュリティ制約（必要に応じて） -->
    <!--
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    -->
    
    <!-- コンテキストパラメータ -->
    <context-param>
        <param-name>db.driver</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:postgresql://localhost:5432/your_database</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.username</param-name>
        <param-value>your_username</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.password</param-name>
        <param-value>your_password</param-value>
    </context-param>
    
</web-app>